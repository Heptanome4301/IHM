<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.andri.bonappetit.MealDetails"
    tools:showIn="@layout/activity_meal_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RatingBar
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--TextView
            android:layout_below="@id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text"
            android:id="@+id/textView3" /-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/date"
            android:text="Date inconnue"
            android:drawableLeft="@mipmap/ic_schedule_black_24dp"
            android:layout_below="@+id/rating_bar"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/location"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Lieu inconnu"
            android:drawableLeft="@mipmap/ic_place_black_24dp"
            android:layout_below="@+id/rating_bar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/description"
            android:layout_below="@+id/location"
            />


    </RelativeLayout>





</android.support.v4.widget.NestedScrollView>
