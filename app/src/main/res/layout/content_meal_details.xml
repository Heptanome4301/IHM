<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MealDetailsActivity"
    tools:showIn="@layout/activity_meal_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RatingBar
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/rating_bar"
            android:isIndicator="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/seats"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/ic_group_black_24dp"
            android:layout_below="@+id/rating_bar"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/date"
            android:drawablePadding="3dp"
            android:text="Date inconnue"
            android:drawableLeft="@mipmap/ic_schedule_black_24dp"
            android:layout_below="@+id/seats" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/price"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/ic_local_offer_black_18dp"
            android:layout_below="@+id/seats"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/location"
            android:text="Lieu inconnu"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/ic_place_black_24dp"
            android:layout_below="@+id/price"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/description"
            android:layout_below="@+id/location" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_map_link"
            android:id="@+id/button_map_link"
            android:layout_below="@+id/date"
            android:layout_toRightOf="@+id/location"
            android:layout_toEndOf="@+id/location" />


    </RelativeLayout>





</android.support.v4.widget.NestedScrollView>
